{% extends 'base.html.twig' %}

{% block body %}
{% include('navbar.html.twig') %}
    <div class="container">
      <div class="table-wrapper">
        <div class="table-title">
          <div class="row">
            <div class="col-sm-6">
              <h2><b>Productos</b></h2>
            </div>
            <div class="col-sm-6">
              <a
                href="{{ path('productos_new') }}"
                class="btn btn-success"><i class="material-icons">&#xE147;</i>
                <span>NUEVO</span></a>
            </div>
          </div>
        </div>
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>CODIGO</th>
              <th>DESCRIPCION</th>
              <th>PRECIO</th>
              <th>STOCK</th>
              <th>ACCION</th>
            </tr>
          </thead>
          <tbody>
          {% for producto in productos %}
        <tr>
          <td>{{ producto.id }}</td>
          <td>{{ producto.codigo }}</td>
          <td>{{ producto.descripcion }}</td>
          <td>{{ producto.precio }}</td>
          <td>{{ producto.stock }}</td>
          <td>
          <a href="{{ path('productos_show', {'id': producto.id}) }}"><i class="material-icons" data-toggle="tooltip" title="Ver">visibility</i></a>
          <a href="{{ path('productos_edit', {'id': producto.id}) }}"class="edit"><i class="material-icons" data-toggle="tooltip" title="Editar">&#xE254;</i></a> 
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
{% endblock %}
